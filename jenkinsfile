properties([pipelineTriggers([[$class: 'BitBucketTrigger']])])
def deployEnvironments = ['Staging', 'Production'].join('\n')

pipeline {
  agent any

  parameters {
    choice(
        name: 'Environment',
        choices: deployEnvironments,
        description: 'Which environment to test?',
    )
  }

  options {
    buildDiscarder(
     logRotator(
       daysToKeepStr: '7',
       numToKeepStr: '10'
     )
   )
  }
  
  stages {
  stage('Execute Tests') {
        def os = System.properties['os.name'].toLowerCase()
         echo "OS: ${os}"
        if (os.contains("linux")) {
             steps{sh '''mvn clean
            mvn validate
         mvn compile'''} 
        } else {
            steps{bat '''mvn clean
            mvn validate
            mvn compile'''}
    }
    }
  }

  post {
    always {
      publishHtmlReports()
    }
    aborted {
      slackNotify("Aborted")
    }
    success {
      slackNotify("Success")
    }
    failure {
      slackNotify("Failure")
    }
  }
}

def publishHtmlReports() {
  echo 'Publish test reports'
  publishHTML target: [
    allowMissing: false,
    alwaysLinkToLastBuild: false,
    keepAll: true,
    reportDir: 'results',
    reportFiles: 'TestCaseReport.html',
    reportName: 'Results report'
  ]
}


def slackNotify(type, message=null, channels=['backendjenkins']) {
  color = "#8c8c8c"
  if (type == "Success") {
    color = "#36a64f"
  } else if (type == "Failure") {
    color = "#d00000"
  }

  def slackMsg = message;
  if (message == null) {
    slackMsg = "Automation Test Â» ${env.GIT_BRANCH} - #${env.BUILD_NUMBER} ${type} (<${env.BUILD_URL}|Open>)";
  }

  channels.each {
    slackSend(
      color: "${color}", botUser: true, channel: "${it}",
      message: slackMsg
    )
  }
}
